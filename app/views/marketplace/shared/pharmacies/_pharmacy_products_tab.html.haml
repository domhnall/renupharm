%h2
  = t("marketplace.pharmacy.products")
  - if policy(@marketplace_pharmacy.products.build).create?
    = link_to t("general.add"), new_marketplace_pharmacy_product_path(pharmacy_id: @marketplace_pharmacy.id), class: "btn btn-success"
= render partial: 'marketplace/shared/pharmacies/product', collection: @marketplace_pharmacy.products.select(&:persisted?)
- if @marketplace_pharmacy.products.count>1 && policy(@marketplace_pharmacy.products.build).create?
  .actions
    = link_to t("general.add"), new_marketplace_pharmacy_product_path(pharmacy_id: @marketplace_pharmacy.id), class: "btn btn-success"
