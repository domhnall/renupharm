.col-12
  %h2.name
    = pharmacy.name
.col-12.col-md-7
  .description
    = pharmacy.description
  .contact_details
    .email
      %label.label= t("marketplace.pharmacy.email")
      .value= pharmacy.email
    .telephone
      %label.label= t("marketplace.pharmacy.telephone")
      .value= pharmacy.telephone
    .fax
      %label.label= t("marketplace.pharmacy.fax")
      .value= pharmacy.fax
    .address
      %label.label= t("marketplace.pharmacy.address")
      %ul
        %li= pharmacy.address_1
        %li= pharmacy.address_2
        %li= pharmacy.address_3
