.card.product{class: product.active? ? 'active' : 'inactive'}
  .row
    .col-5
      .product_images
        - if product.images.any?
          = render "marketplace/shared/product_images", {product: product, context: 'pharmacy_product'}
        - else
          = image_tag("placeholder-product.jpg", class: "img-product")
    .col-7
      .name
        = product.name
      - if product.manufacturer
        .manufacturer
          %span.label= t("marketplace.product.manufacturer") + ":"
          %span.value= product.manufacturer
      .active_ingredient
        %span.label= t("marketplace.product.active_ingredient") + ":"
        %span.value= product.active_ingredient
      .product_form
        %span.label= t("marketplace.product.form") + ":"
        %span.value= product.product_form_name
      .strength
        %span.label= t("marketplace.product.strength") + ":"
        %span.value= product.display_strength
      .pack_size
        %span.label= t("marketplace.product.pack_size") + ":"
        %span.value= product.display_pack_size
      .manufacturer
        = product.manufacturer
  - if policy(product).edit?
    .row
      .actions
        = link_to t("general.edit"), product.pharmacy ? edit_marketplace_pharmacy_product_path(product.pharmacy, product) : edit_marketplace_product_path(product)
