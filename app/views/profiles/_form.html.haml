= form_for @profile do |profile_form|
  .row
    .col-12.col-md-7
      .form-group
        = profile_form.label :first_name, t('profile.first_name'), class: 'col-form-label'
        = profile_form.text_field :first_name, class: 'form-control'
      .form-group
        = profile_form.label :surname, t('profile.surname'), class: 'col-form-label'
        = profile_form.text_field :surname, class: 'form-control'
      .form-group
        = profile_form.label :telephone, t('profile.telephone'), class: 'col-form-label'
        .telephone_section
          %fieldset.form-group
            %div.form-check
              = profile_form.radio_button :country, "ie", class: 'form-check-input'
              = profile_form.label :country, t("profile.country.ie"), class: 'form-check-label'
            %div.form-check
              = profile_form.radio_button :country, "uk", class: 'form-check-input'
              = profile_form.label :country, t("profile.country.uk"), class: 'form-check-label'
          = profile_form.text_field :telephone, class: 'form-control telephone'
      .form-group
        = profile_form.label :role, t('profile.role'), class: 'col-form-label'
        = text_field_tag :role, t("profile.roles.#{@profile.role}"), class: 'form-control', disabled: true
    .col-12.col-md-5
      .form-group
        = image_tag(@profile.avatar.attached? ? @profile.avatar : "placeholder-user.png", class: 'img-avatar')
        = profile_form.file_field :avatar, direct_upload: true, class: 'form-control'

  .actions
    = submit_tag t('general.save'), id: 'submit_user', class: 'btn btn-success'
    = link_to t('general.cancel'), profile_path, class: 'btn btn-light'
