= form_for [:admin, @sales_pharmacy] do |form|
  .form-group
    = form.label :name, t('sales.pharmacy.name'), class: 'col-form-label'
    = form.text_field :name, class: 'form-control'
  .form-group
    = form.label :address_1, t('sales.pharmacy.address_1'), class: 'col-form-label'
    = form.text_field :address_1, class: 'form-control'
  .form-group
    = form.label :address_2, t('sales.pharmacy.address_2'), class: 'col-form-label'
    = form.text_field :address_2, class: 'form-control'
  .form-group
    = form.label :address_3, t('sales.pharmacy.address_3'), class: 'col-form-label'
    = form.text_field :address_3, class: 'form-control'
  .form-group
    = form.label :email, t('sales.pharmacy.email'), class: 'col-form-label'
    = form.text_field :email, class: 'form-control'
  .form-group
    = form.label :telephone, t('sales.pharmacy.telephone'), class: 'col-form-label'
    = form.text_field :telephone, class: 'form-control'
  .form-group
    = form.label :fax, t('sales.pharmacy.fax'), class: 'col-form-label'
    = form.text_field :fax, class: 'form-control'

  .actions
    - if @sales_pharmacy.persisted?
      = link_to t('general.delete'), admin_sales_pharmacy_path(@sales_pharmacy), method: :delete, class: 'btn btn-danger', data: { confirm: t("general.confirm_delete") }
    = submit_tag t('general.save'), id: 'submit_sales_pharmacy', class: 'btn btn-success'
    - if @sales_pharmacy.persisted?
      = link_to t('general.cancel'), admin_sales_pharmacy_path(@sales_pharmacy), class: 'btn btn-light'
    - else
      = link_to t('general.cancel'), admin_sales_pharmacies_path, class: 'btn btn-light'
