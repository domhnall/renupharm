- url = @agent.persisted? ? admin_marketplace_pharmacy_agent_path(@agent.pharmacy, @agent) : admin_marketplace_pharmacy_agents_path(@agent.pharmacy)
= form_for @agent, url: url do |form|
  = form.fields_for :user do |user_form|
    = render 'admin/users/user_fields', form: user_form

  .actions
    = submit_tag t('general.save'), id: 'submit_marketplace_agent', class: 'btn btn-success'
    = link_to t('general.cancel'), marketplace_pharmacy_path(@agent.pharmacy), class: 'btn btn-light'
